<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_blue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAbout"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logoc"
            tools:ignore="ContentDescription" />

        <com.alespero.expandablecardview.ExpandableCardView
            android:id="@+id/card_view_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:animationDuration="500"
            app:expandOnClick="true"
            app:icon="@drawable/icon_others_about"
            app:inner_view="@layout/layout_about"
            app:startExpanded="false"
            app:title="@string/about" />

        <com.alespero.expandablecardview.ExpandableCardView
            android:id="@+id/card_view_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:animationDuration="500"
            app:expandOnClick="true"
            app:icon="@drawable/icon_others_terms"
            app:inner_view="@layout/layout_terms"
            app:startExpanded="false"
            app:title="@string/terms_and_condition" />

        <com.alespero.expandablecardview.ExpandableCardView
            android:id="@+id/card_view_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:animationDuration="500"
            app:expandOnClick="true"
            app:icon="@drawable/icon_others_privacy"
            app:inner_view="@layout/layout_privacy"
            app:startExpanded="false"
            app:title="@string/privacy_policy" />

    </LinearLayout>

</ScrollView>